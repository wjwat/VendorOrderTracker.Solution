@{
  Layout = "_Base";
  int count = 0;
}

@using VendorOrderTracker.Models;

<h2>Vendors</h2>

@if (@Model.Count == 0)
{
  <h4>Please add Vendors to view them.</h4>
  <a href='/vendors/new'><button type='button'>Add Vendor</button></a>
}

<ul>
@foreach (Vendor vendor in Model)
{
  <li>
      <a class='vendor-name' href='/vendors/@count'>@vendor.Name</a><br />
      <b>Description:</b> @vendor.Description
  </li>


  count += 1;
}
</ul>

<a href='/vendors/new'><button type='button'>Add Vendor</button></a>
